<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_open"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_check_tempered"
        android:text="open"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_check_tempered"
        app:layout_constraintTop_toBottomOf="@id/btn_open"
        app:layout_constraintBottom_toTopOf="@id/btn_check_key_existed"
        android:text="Check Tempered"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_check_key_existed"
        app:layout_constraintTop_toBottomOf="@id/btn_check_tempered"
        app:layout_constraintBottom_toTopOf="@id/btn_update_key"
        android:text="Check key existed"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_update_key"
        app:layout_constraintTop_toBottomOf="@id/btn_check_key_existed"
        app:layout_constraintBottom_toTopOf="@id/btn_encrypt"
        android:text="Update key"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_encrypt"
        app:layout_constraintTop_toBottomOf="@id/btn_update_key"
        app:layout_constraintBottom_toTopOf="@id/btn_decrypt"
        android:text="Encrypt"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_decrypt"
        app:layout_constraintTop_toBottomOf="@id/btn_encrypt"
        app:layout_constraintBottom_toTopOf="@id/btn_close"
        android:text="Decrypt"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_close"
        app:layout_constraintTop_toBottomOf="@id/btn_update_key"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="close"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>